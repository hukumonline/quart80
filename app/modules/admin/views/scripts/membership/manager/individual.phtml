		{
			return "redcell";
		}
		// berarti dia due date hari ini
		else if ((record.data.packageId == "member_individual") && (record.data.DaysLeft == 0))
		{
			return "greenrow";
		}
		// berarti dia udah bayar
		else if ((record.data.packageId == "member_individual") && (record.data.DaysLeft == "-"))
		{
			return "pinkrow";
		}
	};
        
